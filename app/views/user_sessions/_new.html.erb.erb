<h1><%= @hospital.name unless @hospital.blank?%></h1>
<hr />

<div class = 'left part1'>
<h1>First step of registration</h1>
<hr />
<% form_for([@hospital, @patient]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
</div>

<div class ='right part2'>
<h1>Already done this? login</h1>
<hr />
<% form_for(@user_session) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>

</div>
